{% extends 'base.html.twig' %}

{% block title %}Intention: {{ intention.description|truncate(50) }}{% endblock %}
{% block page_actions %}
    <a class="btn-outline-dark" href="{{ path('app_intention_index') }}"><em
                class="bi bi-arrow-left"></em></a>
{% endblock %}
{% block card_actions %}
    <a class="btn btn-primary" href="{{ path('app_intention_edit', {'id': intention.id}) }}"><em
                class="bi bi-pencil"></em></a>
    {{ include('intention/_delete_form.html.twig') }}
{% endblock %}

{% block body %}
    <div class="d-flex flex-fill ">
        <div class="h1 me-auto">
            {{ intention.description }}
        </div>
        <div>
            <div>Id: {{ intention.id }}</div>
            <div>Created: {{ intention.createdAt ? intention.createdAt|date('Y-m-d H:i:s') : '' }}</div>
            <div>Updated: {{ intention.updatedAt ? intention.updatedAt|date('Y-m-d H:i:s') : '' }}</div>
        </div>
    </div>
{% endblock %}
