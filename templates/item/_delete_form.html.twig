<form method="post" action="{{ path('app_item_delete', {'id': item.id, 'type':type}) }}"
      onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ item.id) }}">
    <button class="btn btn-delete btn-danger"><em class="bi bi-trash"></em></button>
</form>
