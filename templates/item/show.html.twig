{% extends 'base.html.twig' %}

{% block title %}Item{% endblock %}
{% block page_actions %}
    <a class="btn btn-link" href="{{ path('app_item_index') }}">back to list</a>
    <a class="btn btn-link" href="{{ path('app_item_edit', {'id': item.id}) }}">edit</a>
    {{ include('item/_delete_form.html.twig') }}
{% endblock %}

{% block body %}

    <div><strong>Name</strong>: <span>{{ item.name }}</span></div>
    <div><strong>CreatedAt</strong>: <span>{{ item.createdAt ? item.createdAt|date('Y-m-d H:i:s') : '' }}</span></div>
    <div><strong>UpdatedAt</strong>: <span>{{ item.updatedAt ? item.updatedAt|date('Y-m-d H:i:s') : '' }}</span></div>



{% endblock %}
