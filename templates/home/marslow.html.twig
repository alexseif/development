{% extends 'base.html.twig' %}

{% block title %}Maslow's Motivational Model{% endblock %}
{% block container %}
    <h2>Maslow's Motivational Model</h2>

    <div class="d-flex flex-wrap justify-content-center">
        {% for need, items in maslow_needs %}
            <div class="card flex-fill">
                <div class="card-header">
                    <h2>{{ need }}</h2>
                </div>
                <div class="list-group">
                    {% for item in items %}
                        <div class="list-group-item">{{ item }}</div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
